# Environment variables for GHOSTLY+ FastAPI Backend

# Application settings
APP_NAME="GHOSTLY+ FastAPI Backend"
DEBUG=True
SECRET_KEY="your_super_secret_random_string_here_please_change_me"

# CORS settings (adjust as needed for your frontend URL)
# Example: ALLOWED_ORIGINS="http://localhost:5173,http://127.0.0.1:5173"
ALLOWED_ORIGINS="*" # For development, be more specific in production

# Database settings (Supabase - will be self-hosted)
# These will be populated with actual values from your Supabase setup
DATABASE_URL="postgresql://user:password@host:port/database"

# JWT Settings (if managing tokens directly, Supabase might handle this)
# JWT_SECRET_KEY="your_jwt_secret_key_please_change_me"
# ALGORITHM="HS256"
# ACCESS_TOKEN_EXPIRE_MINUTES=30

# Supabase specific (if using Supabase client library or direct interaction beyond DB)
# SUPABASE_URL="your_supabase_url"
# SUPABASE_KEY="your_supabase_anon_or_service_key"